{
  "name": "youri/parser-xmlschema",
  "description": "XML Schema parser package.",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Youri van den Bogert"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "pestphp/pest": "^3.8",
    "illuminate/support": "^12.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest --colors=always --coverage-clover=coverage.xml"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
